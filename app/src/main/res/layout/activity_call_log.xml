<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:onClick="onReadCallLogClick"
        android:text="@string/request_read_call_log"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:onClick="onWriteCallLogClick"
        android:text="@string/request_write_call_log"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:onClick="onProcessOutgoingCallsClick"
        android:text="@string/request_process_outgoing_calls"
        android:textAlignment="center"
        android:textSize="16sp" />

</LinearLayout>